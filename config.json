{
	"name": "LAMP Study Portal",

	"namespace": "Stanford\\LampStudyPortal",

	"description": "A template for a REDCap External Module",

	"documentation": "README.md",

	"authors": [
		{
			"name": "Andrew Martin",
			"email": "andy123@stanford.edu",
			"institution": "Stanford University"
		}
	],

	"permissions": [
		"redcap_module_system_enable",
		"redcap_module_project_enable",
		"redcap_module_save_configuration"
	],

	"enable-every-page-hooks-on-system-pages": false,

	"links": {
		"project": [

		],
		"control-center": [

		]
	},

	"no-auth-pages": [

	],

	"project-settings": [
        {
            "key": "authentication-email",
            "name": "<b>Email which will be used to get Bearer Token</b><br><i></i>",
            "required": true,
            "type": "text"
        },
        {
            "key": "authentication-password",
            "name": "<b>Password which will be used to get Bearer Token</b><br><i></i>",
            "required": true,
            "type": "text"
        },
        {
            "key": "current-token",
            "name": "<b>This field will contain current token till expired.</b><br><i></i>",
            "required": false,
            "type": "text"
        },
        {
            "key": "token-expiration-time",
            "name": "<b>When current token will expire. </b><br><i></i>",
            "required": false,
            "type": "text"
        },
        {
            "key": "enable-project-debug-logging",
            "name": "<b>Enable Debug Logging</b><br><i>(optional)</i> Requires installation and configuration of emLogger",
            "required": false,
            "type": "checkbox"
        }
    ],


	"system-settings": [
		{
			"key": "enable-system-debug-logging",
			"name": "<b>Enable Debug Logging (system-wide)</b><i>(optional)</i> Requires installation and configuration of emLogger",
			"required": false,
			"type": "checkbox"
		}
	],

	"compatibility": {
		"php-version-min": "",
		"php-version-max": "",
		"redcap-version-min": "",
		"redcap-version-max": ""
	}
}
